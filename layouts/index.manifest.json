{
    "name": "{{ site.Title }}",
    "short_name": "{{ site.Params.shortTitle | default site.Title }}",
    "start_url": "{{ site.BaseURL | absURL }}",
    "display": "standalone",
    "description": "{{ site.Params.description }}",
    "lang": "{{ site.Language.LanguageCode }}",
    "scope": "{{ site.BaseURL | absURL }}",
    "id": "/{{ site.Params.shortTitle | default site.Title }}/?source=pwa",
    "dir": "auto",
    "background_color": "#ffffff",
    "theme_color": "#007bff",
    "orientation": "any",
    "categories": ["productivity", "education", "technology"],
    "display_override": ["fullscreen", "minimal-ui"],
    "icons": [
        {
            "src": "{{ "favicons/android-chrome-512x512.png" | absURL }}",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "{{ "favicons/android-chrome-192x192.png" | absURL }}",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "{{ "favicons/favicon-16x16.png" | absURL }}",
            "sizes": "16x16",
            "type": "image/png"
        },
        {
            "src": "{{ "favicons/favicon-32x32.png" | absURL }}",
            "sizes": "32x32",
            "type": "image/png"
        }
    ],
    "screenshots": [
        {
            "src": "{{ "favicons/desktop-dark.png" | absURL }}",
            "sizes": "1170x672",
            "type": "image/png",
            "description": "Desktop View Beautiful Dark Mode",
            "form_factor": "wide"
        },
        {
            "src": "{{ "favicons/desktop-light.png" | absURL }}",
            "sizes": "1170x672",
            "type": "image/png",
            "description": "Desktop View Beautiful Light Mode",
            "form_factor": "wide"
        },
        {
            "src": "{{ "favicons/mobile-dark.png" | absURL }}",
            "sizes": "327x709",
            "type": "image/png",
            "description": "Mobile View Beautiful Dark Mode"
        },
        {
            "src": "{{ "favicons/mobile-light.png" | absURL }}",
            "sizes": "327x709",
            "type": "image/png",
            "description": "Mobile View Beautiful Light Mode"
        }
    ]
}